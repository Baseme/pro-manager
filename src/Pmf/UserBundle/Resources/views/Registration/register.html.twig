{% extends '::base.html.twig' %}

{% block content %}
<link rel="stylesheet" type="text/css" media="screen" href="{{ asset('assets/pmfuser/css/register.css') }}" />
<script src="{{ asset('assets/pmfuser/js/registration.js') }}" type="text/javascript"></script>

<div id="registration-p1">
	<div id="content">
		
		<!-- coffee and ipod images -->
		<img id="coffee" src="{{ asset('assets/pmfuser/images/registration/coffee.png') }}" alt="coffee">
		<img id="ipod" src="{{ asset('assets/pmfuser/images/registration/ipod.png') }}" alt="ipod">
		
		<div id="photo-area">
			<img class="trombone" src="{{ asset('resources/images/profile/trombone.png') }}">
			<img class="picture" src="{{ asset('resources/images/profile/blank.png') }}">
		</div>
		
		<h1>-CREEZ VOTRE PROFIL-</h1>
		
		<form id="registration" action="{{ path('registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
			
			{{ form_widget(form) }}
			
			<div style="text-align:center;padding-top:1em;">
				<input type="submit" id="register" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
			</div>
			
		</form>
	
	</div>	
</div>
	
<a style="display:none;" id="box-success-trigger" href="#box-registered"></a>
<div style="display:none">
	<div id="box-registered">
	<h1>LE BORD DE DIRECTION</h1>
	
	<p>Le bord de direction a été impréssionné par votre profil et a décidé d'accepter votre candidature.<br />
	Un courrier de bienvenue vient de vous être envoyé par email à l'instant.<br />
	<b>Veuillez confirmer votre email</b> pour entâmer la création de votre équipe et commencer votre carrière de manager.</p>
	
	<p>Bonne chance !</p>
	
	<p>La direction.</p>
	
	<p style="text-align:center;margin-top:-15px;"><a href="#" onclick="$.fancybox.close();return false;"><img src="{{ asset('assets/common/images/buttons/btn-ok.png') }}" alt="ok" /></a></p>
	
	</div>
</div>
{% endblock %}

